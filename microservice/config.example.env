# Moro Microservices Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================
# Global Configuration
# ============================================
NODE_ENV=development
LOG_LEVEL=info
LOG_FORMAT=pretty

# ============================================
# Service Discovery Configuration
# ============================================
DISCOVERY_TYPE=memory
# Options: memory, consul, kubernetes

# Consul Configuration (if using consul)
CONSUL_URL=http://localhost:8500

# Kubernetes Configuration (if using kubernetes)
K8S_NAMESPACE=default

# ============================================
# Service-Specific Configuration
# ============================================

# User Service
USER_SERVICE_HOST=localhost
USER_SERVICE_PORT=3010

# Payment Service  
PAYMENT_SERVICE_HOST=localhost
PAYMENT_SERVICE_PORT=3011

# Order Service
ORDER_SERVICE_HOST=localhost
ORDER_SERVICE_PORT=3012

# ============================================
# Inter-Service Communication URLs
# ============================================
USER_SERVICE_URL=http://localhost:3010
PAYMENT_SERVICE_URL=http://localhost:3011

# ============================================
# Load Balancer / Gateway Configuration
# ============================================
NGINX_PORT=3000
GATEWAY_HOST=localhost

# ============================================
# Database Configuration (for production)
# ============================================
# DATABASE_URL=mysql://user:password@localhost:3306/moro_db
# REDIS_URL=redis://localhost:6379

# ============================================
# External Service Configuration
# ============================================
# Stripe Configuration
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal Configuration  
# PAYPAL_CLIENT_ID=...
# PAYPAL_CLIENT_SECRET=...
# PAYPAL_WEBHOOK_ID=...

# ============================================
# Monitoring Configuration
# ============================================
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# ============================================
# Security Configuration
# ============================================
# JWT_SECRET=your-super-secret-jwt-key
# API_KEY_HEADER=X-API-Key
# RATE_LIMIT_WINDOW=60000
# RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Docker/Container Configuration
# ============================================
# SERVICE_HOST=0.0.0.0  # Use for containers
# KUBERNETES_SERVICE_HOST=  # Set by Kubernetes automatically 